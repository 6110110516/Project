<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pack Tag</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 20px;">

    <!-- <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %> -->

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    

    <div class="card">
        <div class="card-header">
            <%include ../tabmenu/menu %>
            <ul class="nav-link">Package Tag<br>UID :<%= uid %></ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <!-- <th scope="col">#</th> -->
                            <th scope="col"></th>
                            <th scope="col"></th>
                            
                            <!-- <th width="400px"></th> -->
                        </tr>
                    </thead>
                    <tbody>
                            
                    <!-- <th scope="col">#</th> -->
                    <tr>
                        <th scope="row">Package ID</th>
                        <th ><%= data[0].pack_id %></th>
                    </tr>
                    <tr>
                        <th scope="row">UID tag </th>
                        <td><%= data[0].uid %></td>
                    </tr>
                    <tr>
                        <th scope="row">Start date </th>
                        <td><%= moment(data[0].start_date).format('Do MMMM, YYYY'); %></td>
                    </tr>
                    <tr>
                        <th scope="row">Finish date</th>
                        <td><%= moment(data[0].finish_date).format('Do MMMM, YYYY'); %></td>
                    </tr>
                    <tr>
                        <th scope="row">จำนวนปู</th>
                        <td><%= data[0].amount_crab %></td>
                    </tr>
                    <!-- <th width="400px"></th> -->
                    
                    </tbody>                                                                                                                                              
               </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No Order found!</p>
            <% } %>
            <ul class="nav nav-pills w-100">
                <% if(data.length) { %>
                    <% if(data[0].statu == 0) { %>
                        <li class="nav-link">
                            <a href="../data/packfinish?pack_id=<%= data[0].pack_id %>" onclick="return confirm('Are you sure?')" class="btn btn-success ">ปิดกล่อง</a>
                        </li>
                        <li class="nav-link">
                            <a href="../data/packupdate?pack_id=<%= data[0].pack_id %>" class="btn btn-success ">update สถานะ</a>
                        </li>
                    <% } %>
                    <% if(data[0].statu == 1) { %>
                        <li class="nav-link">
                            <a href="../data/listordering?pack_id=<%= data[0].pack_id %>" class="btn btn-warning ">กดเพิ่มลงออเดอร์</a>
                        </li>
                    <% } else {%>
                        <% } %>
                <li class="nav-link">
                    <a href="../data/deletepacklist?pack_id=<%= data[0].pack_id %>" onclick="return confirm('Are you sure?')" class="btn btn-danger delete">Delete</a>
                </li>
                <% } %>
                <% if(!data.length) { %>
                    <form action="/data/packstart?uid=<%= uid %>" method="post"  >           
                        <div class="form-grup">
                            <input type="submit"  onclick="return confirm('Are you sure?')" class="btn btn-info" value="เริ่มใช้งาน">
                        </div>
                    </form>

                <% } %>
            </ul>
        </div>
    </div>

</body>
</html>
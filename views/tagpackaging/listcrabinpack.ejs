<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>package Tag</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 20px;">
     
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <div class="card">
        <div class="card-header">
            
            <ul class="nav nav-pills w-100">
                <li class="nav-link">ค้นหา </li>
                <li class="nav-link ml-auto">
                    <a href="/users/check?pack_id=<%= data[0].pack_id %>"  class="btn btn-info">Back</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <!-- <th scope="col">#</th> -->
                            <th scope="col"></th>
                            <th scope="col"></th>
                            
                            <!-- <th width="1100px"></th> -->
                        </tr>
                    </thead>
                    <tbody>
                            
                    <!-- <th scope="col">#</th> -->
                    <tr>
                        <th scope="row">Package ID</th>
                        <th ><%= data[0].pack_id %></th>
                    </tr>
                    
                    <tr>
                        <th scope="row"> วันที่ลอกคราบ</th>
                        <td><%= moment(data[0].molt_date).format('Do MMMM, YYYY'); %></td>
                    </tr>
                    <% if (data[0].finish_date != null){ %>
                    <tr>
                        <th scope="row">finish date</th>
                        <td><%= moment(data[0].finish_date).format('Do MMMM, YYYY'); %></td>
                    </tr>
                    <%   }%>
                    <tr>
                        <th scope="row">สถานที่เลี้ยง</th>
                        <td><%= place %></td>
                    </tr>
                    <tr>
                        <th scope="row">จำนวนปู</th>
                        <td><%= data[0].amount_crab %> ตัว</td>
                    </tr>
                    <tr>
                        <th scope="row">น้ำหนัก</th>
                        <% if(data[0].weight != null ) {%>
                        <td><%= data[0].weight %> กิโลกรัม</td>
                        <% } else {%>
                        <td> -- </td>
                        <% } %>
                    </tr>
                    <tr>
                        <th scope="row">status</th>
                        <td>
                            <% for(i=0;i< data_up.length; i++) {%>
                            <%= moment(data_up[i].timestamp).format("HH:mm น."+""+" Do-MMMM-YYYY ") %> -- <%=data_up[i].update_pack %>
                            <br>
                            <% } %>
                            <!-- <% if(data[0].statu == 0) {%>
                                    <a class="btn btn-info">เริ่มใช้งาน</a>
                                <%} else if(data[0].statu == 1) {%>
                                    <a class="btn btn-success">รอบรรจุ</a>                                                                 
                                <%} else if(data[0].statu == 2) {%>   
                                    <a class="btn btn-success">บรรจุแล้ว</a>                         
                                <%} else {%>                               
                                    <a class="btn btn-secondary"></a>         
                                <% }%> -->
                        </td>

                    </tr>
                   
                    <th >
                        <a href="/users/infofarm?id=<%= data[0].place_id %>">ดูข้อมูลฟาร์มเพิ่มเติม</a>
                    </th>


                   </tbody>                                                                                                                                              
               </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No Order found!</p>

            <% } %>
            
        </div>
        
    </div>

</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>package Tag</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body class="container" style="margin-top: 20px;">
     
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert"><%= messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%= messages.error %></div>
    <% } %>
    
    <div class="card">
        <div class="card-header">
            <%include ../tabmenu/menu %>
        </div>
        <div class="card-body">
            <% if(data.length) { %>
                <table class="table">
                    <thead>
                        <tr>
                            <!-- <th scope="col">#</th> -->
                            <th scope="col"></th>
                            <th scope="col"></th>
                            
                            <!-- <th width="400px"></th> -->
                        </tr>
                    </thead>
                    <tbody>
                            
                    <!-- <th scope="col">#</th> -->
                    <tr>
                        <th scope="row">Package ID</th>
                        <th ><%= data[0].pack_id %></th>
                    </tr>
                    <tr>
                        <th scope="row">tag ID </th>
                        <td><%= data[0].uid %></td>
                    </tr>
                    <tr>
                        <th scope="row">Start date </th>
                        <td><%= moment(data[0].start_date).format('Do MMMM, YYYY'); %></td>
                    </tr>
                    <% if (data[0].finish_date != null){ %>
                    <tr>
                        <th scope="row">finish date</th>
                        <td><%= moment(data[0].finish_date).format('Do MMMM, YYYY'); %></td>
                    </tr>
                    <%   }%>
                    <tr>
                        <th scope="row">สถานที่เลี้ยง</th>
                        <td><%= data[0].place %></td>
                    </tr>
                    <tr>
                        <th scope="row">Amount crab</th>
                        <td><%= data[0].amount_crab %></td>
                    </tr>
                    <tr>
                        <th scope="row">status</th>
                        <td>
                            <% for(i=0;i< data_up.length; i++) {%>
                            <%= moment(data_up[i].timestamp).format("HH:mm:ss "+"...."+" DD-MM-YYYY ") %> -- <%=data_up[i].update_pack %>
                            <br>
                            <% } %>
                            <% if(data[0].statu == 0) {%>
                                    <a class="btn btn-info">เริ่มใช้งาน</a>
                                <%} else if(data[0].statu == 1) {%>
                                    <a class="btn btn-success">รอบรรจุ</a>                                                                 
                                <%} else if(data[0].statu == 2) {%>   
                                    <a class="btn btn-success">บรรจุแล้ว</a>                         
                                <%} else {%>                               
                                    <a class="btn btn-secondary"></a>         
                                <% }%>
                        </td>

                    </tr>
                   

                    

                   </tbody>                                                                                                                                              
               </table>
            <% } %>

            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No Order found!</p>

            <% } %>
            <ul class="nav nav-pills w-100">
                <% if(data.length) { %>
                
                <% } %>
                <% if(!data.length) { %>
                    <form action="/data/crabstart?uid=<%= uid %>" method="post"  >           
                        <div class="form-group">
                            <label>กรอกจำนวนปู</label>
                            <input type="number" class="form-control" id="amount" name="amount" >  
                            <br>     
                            <input type="submit"  onclick="return confirm('Are you sure?')" class="btn btn-info" value="เริ่มใช้งาน">
                        </div>
                    </form>

                <% } %>
            </ul>
        </div>
        
    </div>

</body>
</html>